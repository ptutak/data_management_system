[Unit]
Description=CMAK service
Requires=kafka.service

[Service]
Type=simple
User=kafka
Group=kafka
WorkingDirectory=/opt/cmak
Environment="JAVA_HOME=/usr/lib/jvm/jre-11-openjdk"
Environment="ZK_HOSTS={{ ZOOKEEPER_HOSTS }}/kafka"
TimeoutStartSec=2min
ExecStartPre=/bin/rm -rf /opt/cmak/RUNNING_PID
ExecStart=/opt/cmak/bin/cmak
Restart=on-failure

[Install]
WantedBy=multi-user.target
