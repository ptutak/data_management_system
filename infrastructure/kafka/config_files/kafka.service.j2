[Unit]
Description=Kafka service
After=syslog.target network.target remote-fs.target nss-lookup.target network-online.target
Requires=network-online.target

[Service]
Type=simple
User=kafka
Group=kafka
Environment="KAFKA_JMX_OPTS=-Dcom.sun.management.jmxremote=true -Dcom.sun.management.jmxremote.authenticate=false -Dcom.sun.management.jmxremote.ssl=false -Dcom.sun.management.jmxremote.rmi.port=9999 -Djava.rmi.server.hostname={{ansible_host}} -Djava.net.preferIPv4Stack=true"
Environment="JMX_PORT=9999"
ExecStart=/bin/sh -c '{{ KAFKA_HOME }}/bin/kafka-server-start.sh {{ KAFKA_HOME }}/config/server.properties > {{ KAFKA_HOME }}/logs/kafka.log 2>&1'
ExecStop={{ KAFKA_HOME }}/bin/kafka-server-stop.sh
Restart=always
Restart=on-failure

[Install]
WantedBy=multi-user.target
