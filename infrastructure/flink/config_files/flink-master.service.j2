[Unit]
Description=Flink Master service
After=syslog.target network.target remote-fs.target nss-lookup.target network-online.target
Requires=network-online.target

[Service]
Type=forking
User=flink
Group=flink
WorkingDirectory={{ FLINK_HOME }}
Environment="JAVA_HOME={{ JAVA_HOME }}"
Environment="HADOOP_CLASSPATH={{ HADOOP_HOME }}/share/hadoop/common/*:{{ HADOOP_HOME }}/share/hadoop/common/lib/*:{{ HADOOP_HOME }}/share/hadoop/hdfs/*:{{ HADOOP_HOME }}/share/hadoop/hdfs/lib/*"

ExecStartPre=/bin/bash -c "{{ FLINK_HOME }}/bin/stop-cluster.sh || true;"
ExecStart={{ FLINK_HOME }}/bin/start-cluster.sh
ExecStop={{ FLINK_HOME }}/bin/stop-cluster.sh
TimeoutStartSec=4min
RemainAfterExit=yes
Restart=on-failure
RestartSec=1min

[Install]
WantedBy=multi-user.target
