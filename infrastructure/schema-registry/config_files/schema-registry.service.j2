[Unit]
Description=SchemaRegistry service

[Service]
Type=forking
User=schema-registry
Group=schema-registry
WorkingDirectory=/opt/schema-registry
Environment="JAVA_HOME=/usr/lib/jvm/jre-11-openjdk"
ExecStart=/opt/schema-registry/bin/schema-registry-start -daemon /opt/schema-registry/config/schema-registry.properties
ExecStop=/opt/schema-registry/bin/schema-registry-stop
Restart=on-failure

[Install]
WantedBy=multi-user.target
