[Unit]
After=syslog.target network.target remote-fs.target nss-lookup.target network-online.target
Requires=network-online.target

[Service]
Type=forking
User=kafka-rest
Group=kafka-rest
WorkingDirectory=/opt/kafka-rest
Environment="JAVA_HOME={{ JAVA_HOME }}"
ExecStart={{ KAFKA_REST_HOME }}/bin/kafka-rest-start -daemon {{ KAFKA_REST_HOME }}/config/kafka-rest.properties
ExecStop=/bin/bash -c "{{ KAFKA_REST_HOME }}/bin/kafka-rest-stop || true"
RemainAfterExit=yes
TimeoutStartSec=2min
Restart=on-failure

[Install]
WantedBy=multi-user.target
